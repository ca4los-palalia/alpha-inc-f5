							</hlayout>
							<hlayout>
								<label value="Padecimientos crónicos:" />
								<textbox zclass="tBox" />
							</hlayout>
							<hlayout>
								<label
									value="Medicamentos que toma actualmente:" />
								<textbox zclass="tBox" />
							</hlayout>
							<hlayout>
								<label
									value="En caso de urgencia llamar a:" />
								<textbox zclass="tBox" />
							</hlayout>
							<hlayout>
								<label value="Teléfono:" />
								<textbox zclass="tBox" />
							</hlayout>
						</vlayout>
					</tabpanel>
					<tabpanel>
						<vlayout>
							<vlayout>
								<hlayout>
									<label value="Nivel académico:" />
									<combobox />
									<label value="Año de inicio:" />
									<decimalbox />
									<label value="Año de término:" />
