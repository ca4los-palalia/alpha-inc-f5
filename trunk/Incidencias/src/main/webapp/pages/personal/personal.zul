								</hlayout>
								<hlayout>
									<label value="Especialidad:" />
									<textbox zclass="tBox" />
									<label value="Institución:" />
									<textbox zclass="tBox" />
								</hlayout>
								<hlayout>
									<label value="Status:" />
									<combobox />
								</hlayout>
							</vlayout>
							<button label="Agregar curso" />
							<grid height="350px"
								emptyMessage="Nothing in Inbox.">
								<columns>
									<column label="Fecha Inicio"
										width="10%" />
									<column label="Fecha Fin"
										width="10%" />
									<column label="Nombre" width="20%" />
									<column label="Descripción"
										width="35%" />
									<column label="Institución"
										width="25%" />
								</columns>
								<template name="model">
									<row>
										<datebox zclass="tBox" />
										<datebox zclass="tBox" />
										<textbox zclass="tBox" />
										<textbox zclass="tBox" />
										<textbox zclass="tBox" />
									</row>
								</template>
							</grid>

						</vlayout>
					</tabpanel>
					<tabpanel>
						<vlayout>
							<vlayout>
								<button label="Agregar Documento" />
