						image="/images/toolbar/linedpaperpencil32.png" />
					<tab label="Historial Organizacional"
						image="/images/toolbar/linedpaperlock32.png" />
				</tabs>
				<tabpanels>
					<tabpanel>
						<vlayout>
							<hlayout>
								<label value="Nombre(s):" sclass="lbl" />
								<textbox zclass="tBox" />
								<label value="Apellido Paterno:"
									sclass="lbl" />
