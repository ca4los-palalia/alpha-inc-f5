								<label value="Cuenta:" />
								<textbox zclass="tBox" />
								<label value="CLABE:" />
								<textbox zclass="tBox" />
							</hlayout>
							<hlayout>
								<vlayout>
									<hlayout>
										<label value="Fecha cambios:" />
