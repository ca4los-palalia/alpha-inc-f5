										<column label="Fecha Inicio"
											width="10%" />
										<column label="Fecha Fin"
											width="10%" />
										<column label="Nombre"
											width="20%" />
										<column label="Descripción"
											width="35%" />
										<column label="Institución"
											width="25%" />
