								<label value="Apellido Materno:"
									sclass="lbl" />
								<textbox zclass="tBox" />
							</hlayout>
							<hlayout>
								<label value="Edo Civil:" sclass="lbl" />
								<combobox />
								<label value="Fecha N:" sclass="lbl" />
								<datebox id="db1" cols="12"
									format="medium" onCreate="self.value = new Date()" locale="mx" />
								<label value="Sexo:" sclass="lbl" />
								<combobox />
							</hlayout>
						</vlayout>

						<vlayout>
							<hlayout>
								<label value="Calle:" sclass="lbl" />
								<textbox zclass="tBox" />

								<label value="Num Ext:" sclass="lbl" />
								<textbox zclass="tBox" />


								<label value="Num Int:" sclass="lbl" />
								<textbox zclass="tBox" />
							</hlayout>
							<hlayout>
								<label value="Estado:" sclass="lbl" />
								<combobox />
								<label value="Municipio:" sclass="lbl" />
								<combobox />
								<label value="Código Postal:"
									sclass="lbl" />
								<intbox zclass="tBox"
									constraint="/^([1-9]{2}|[0-9][1-9]|[1-9][0-9])[0-9]{3}$/: C.P. Inválido" />
							</hlayout>
							<hlayout>
								<label value="Ciudad:" sclass="lbl" />
								<textbox zclass="tBox" />
								<label value="Colonia:" sclass="lbl" />
								<textbox zclass="tBox" />
							</hlayout>
						</vlayout>

						<vlayout>
							<hlayout>
								<label value="Teléfono:" sclass="lbl" />
								<textbox zclass="tBox"
									constraint="/^[0-9]{2,3}-? ?[0-9]{6,7}$/: el número registrado es incorrecto" />

								<label value="Celular:" sclass="lbl" />
								<textbox zclass="tBox" />


								<label value="Email:" sclass="lbl" />
								<textbox zclass="tBox"
									constraint="/.+@.+\.[a-z]+/: por favor ingrese una dirección válida" />
							</hlayout>
							<hlayout>

								<label value="RFC:" sclass="lbl" />
								<textbox zclass="tBox" />
								<label value="CURP:" sclass="lbl" />
								<textbox zclass="tBox"
									constraint="/[A-Z][A,E,I,O,U,X][A-Z]{2}[0-9]{2}[0-1][0-9][0-3][0-9][M,H][A-Z]{2}[B,C,D,F,G,H,J,K,L,M,N,Ñ,P,Q,R,S,T,V,W,X,Y,Z]{3}[0-9,A-Z][0-9]/: CURP Inválida" />
							</hlayout>
							<hlayout>
								<label value="Ciudad:" sclass="lbl" />
								<textbox zclass="tBox" />
								<label value="Colonia:" sclass="lbl" />
								<textbox zclass="tBox" />
							</hlayout>
						</vlayout>
					</tabpanel>
					<tabpanel>
						<vlayout>
							<hlayout>
								<label value="Nombre de padre:" />
