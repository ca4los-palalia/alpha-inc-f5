										</hlayout>
									</vlayout>

								</vlayout>
								<hlayout>
									<vlayout>
										<groupbox closable="false"
											style="padding: 10px;">
											<tabbox id="tbx2"
												hflex="1">
												<toolbar>
													<toolbarbutton
														id="plustbbtn" label="+" width="20px" height="28px">
													</toolbarbutton>
												</toolbar>
												<tabs>
													<tab>Diarias</tab>
													<tab>Anuales</tab>
													<tab>Bajas</tab>
												</tabs>
